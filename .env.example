# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=marketplace_user
DB_PASSWORD=your_secure_password
DB_NAME=marketplace_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300s

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# Nango Configuration (Get these from your Nango dashboard)
NANGO_SERVER_URL=https://api.nango.dev
NANGO_PUBLIC_KEY=your_nango_public_key_from_dashboard
NANGO_SECRET_KEY=your_nango_secret_key_from_dashboard
NANGO_WEBHOOK_SECRET=your_nango_webhook_secret

# Production OAuth Redirect URI: https://api.engageautomations.com/api/v1/auth/oauth/callback

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRATION=3600

# Rate Limiting Configuration
RATE_LIMIT_RPS=100
RATE_LIMIT_WINDOW=60s
RATE_LIMIT_ENABLED=true

# Caching Configuration
CACHE_EXPIRATION=60
CACHE_ENABLED=true
CACHE_COMPRESSION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With,X-Admin-Token
CORS_ALLOW_CREDENTIALS=true

# Environment
ENVIRONMENT=development
DEBUG=true

# Admin Configuration
ADMIN_TOKEN=admin_secret_token_change_in_production

# Scheduler Configuration
SCHEDULER_ENABLED=true
TOKEN_REFRESH_SCHEDULE=0 */1 * * *
TOKEN_CLEANUP_SCHEDULE=0 2 * * *
HEALTH_CHECK_SCHEDULE=*/5 * * * *
TOKEN_MONITOR_SCHEDULE=*/30 * * * *

# Performance Configuration
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30s
SHUTDOWN_TIMEOUT=30s

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Railway Configuration (for deployment)
# These will be set automatically by Railway
# RAILWAY_STATIC_URL=
# RAILWAY_PUBLIC_DOMAIN=
# DATABASE_URL=
# REDIS_URL=